<!DOCTYPE html>
<html lang="zh-Hans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>hello books</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <style>
      #search-main {
        width: 1000px;
        margin: 0 auto;
        padding: 40px 0;
      }
      .search-title {
        font-size: 20px;
        font-weight: 400;
        margin-bottom: 40px;
      }
      .search-list li {
        height: 30px;
        line-height: 30px;
        display: flex;
      }
      .search-list li span {
        white-space: pre-wrap;
        word-wrap: break-word;
        overflow: hidden;
      }
      .search-list li span a {
        color: #475fe6;
      }
      .search-list li span a:hover {
        text-decoration: underline;
      }
      .search-list li span:nth-child(1),
      .search-list li span:nth-child(5),
      .search-list li span:nth-child(7) {
        width: 10%;
      }
      .search-list li span:nth-child(2),
      .search-list li span:nth-child(3),
      .search-list li span:nth-child(4) {
        width: 15%;
      }
      .search-list li span:nth-child(6) {
        width: 20%;
      }
    </style>
  </head>
  <body>
    <div id="search-main">
      <h2 class="search-title"><%= title %></h2>
      <ul class="search-list">
        <li>
          <span>作品分类</span>
          <span>作品名称</span>
          <span>最新章节</span>
          <span>作者</span>
          <span>点击</span>
          <span>更新时间</span>
          <span>状态</span>
        </li>
        <% bookList.forEach(function(book){ %>
        <li>
          <span><%= book[0] %></span>
          <span><a href="<%= book[1].href %>"><%= book[1].val %></a></span>
          <span><%= book[2] %></span>
          <span><%= book[3] %></span>
          <span><%= book[4] %></span>
          <span><%= book[5] %></span>
          <span><%= book[6] %></span>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
